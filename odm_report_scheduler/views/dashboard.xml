<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="act_completion_report" model="ir.actions.act_window">
        <field name="name">Report Completion</field>
        <field name="res_model">odm.report.submission</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="odm_report_scheduler.view_odm_report_submission_graph_pie"/>
        <field name="domain">
            [('submission_result','!=',False)]
        </field>
    </record>
    <record id="dashboard_form_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-2" disable_customization="1">
                    <column>
                        <action
                            string="Report Completion"
                            name="%(odm_report_scheduler.act_completion_report)d"/>
                    </column>
                    <column>

                    </column>
                </board>
            </form>
        </field>
    </record>
    <record id="document_monitoring_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="dashboard_form_view"/>
    </record>
</odoo>