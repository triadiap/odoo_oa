<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_document_type_model" model="ir.ui.view">
        <field name="name">oa.reporting.type.tree</field>
        <field name="model">oa.reporting.type</field>
        <field name="arch" type="xml">
            <tree string="Document Type Master Data" editable="bottom">
                <header>
                    <button name="action_delete_selected"
                        type="object"
                        string="Delete"
                        class="btn-danger"
                        confirm="Are you sure you want to delete selected records?"/>
                </header>
                <field name="name" optional="show"/>
                <field name="create_uid" optional="show"/>
                <field name="create_date" optional="show"/>
                <field name="write_uid" optional="show"/>
                <field name="write_date" optional="show"/>
            </tree>
        </field>
    </record>

     <record id="document_type_configuration_action" model="ir.actions.act_window">
        <field name="name">Document Type Master Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">oa.reporting.type</field>
        <field name="view_mode">tree</field>
        <field name="target">current</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
               Setup your master data here!
            </p>
        </field>
    </record>
</odoo>