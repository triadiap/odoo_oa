<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CompletionReportDashboard">
        <div class="o_completion_dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="text-center">Completion Report Dashboard</h2>
                    </div>
                </div>
                <div class="row mt-3 mb-3 p-3 bg-light border rounded">
                    <div class="col-md-4">
                        <label for="doc_type_filter">Document Type</label>
                        <select id="doc_type_filter" class="form-control completion_filter">
                            <option value="">All Document Types</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="report_name_filter">Report Name</label>
                        <select id="report_name_filter" class="form-control completion_filter">
                            <option value="">All Report Names</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="department_filter">Department</label>
                        <select id="department_filter" class="form-control completion_filter">
                            <option value="">All Departments</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-4 text-center">
                        <div class="card p-3">
                            <h3>Total Processed Reports</h3>
                            <p class="display-4">0</p>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="card p-3">
                            <h3>On-Time Reports</h3>
                            <p class="display-4 text-success">0</p>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="card p-3">
                            <h3>Late Reports</h3>
                            <p class="display-4 text-danger">0</p>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title text-center">Submission Status Breakdown</h5>
                                <div id="completion_chart" style="height: 400px"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>