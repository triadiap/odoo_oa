<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reporting_type_delete_wizard_form" model="ir.ui.view">
            <field name="name">reporting.type.delete.wizard.form</field>
            <field name="model">reporting.type.delete.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Deletion">
                    <p>Are you sure you want to delete the selected reporting type(s)?</p>
                    <footer>
                        <button string="Delete" name="action_confirm_delete" type="object" class="btn-danger" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
